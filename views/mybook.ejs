<!-- views/myBook.ejs -->
<%- include('partials/header', { pageTitle: pageTitle, user: user }) %>

  <div class="row justify-content-center mt-4">

    <div class="col-12 pd-2">
      <h2 class="text-center mb-4 pd-2" style="font-family: 'Georgia', serif; color: #2c3e50;">My Books</h2>
      <div id="myBookError" class="alert-rank alert-danger text-center" style="display: none;"></div>
      <div id="myBookContainer" class="row row-cols-1 row-cols-md-4 g-4 pd-2 mb-4">
        <!-- myBook will be dynamically populated here -->
      </div>
    </div>
  </div>

  <!-- Floating Plus Icon -->


  <style>
    .card {
      border-radius: 15px;
      background: linear-gradient(135deg, #ecf0f1, #dfe6e9);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
    }

    .add-myBook-icon {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 1000;
      text-decoration: none;
    }

    .add-myBook-icon:hover circle {
      fill: #f1c40f;
    }

    .add-myBook-icon:hover path {
      stroke: #2c3e50;
    }
  </style>

  <script src="/js/myBook.js"></script>
  <%- include('partials/footer') %>