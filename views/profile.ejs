<!-- views/profile.ejs -->
<%- include('partials/header', { pageTitle: 'Profile' , user: user }) %>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-4">
                <h1 class="display-4 fw-bold" style="font-family: 'Georgia', serif; color: #2c3e50;">Hello!</h1>
                <p class="lead text-muted">Welcome to your Book Swap profile</p>
            </div>
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg border-0"
                    style="background: linear-gradient(135deg, #ffffff, #f8f9fa); border-radius: 20px;">
                    <div class="card-body p-4">
                        <div id="profileError" class="alert alert-danger rounded-3" style="display: none;"></div>
                        <div class="row align-items-center">
                            <!-- Cartoon Logo -->
                            <div class="col-md-4 text-center">
                                <img id="profileImage" src="https://via.placeholder.com/150?text=Cute+Cat"
                                    alt="Profile Cartoon" class="img-fluid rounded shadow-sm"
                                    style="max-height: 250px; object-fit: cover;">
                                <p class="text-muted mt-2">Cartoon by Book Swap</p>
                            </div>
                            <!-- Details and Interested Books Side by Side -->
                            <div class="col-md-8">
                                <div class="row">
                                    <!-- Details -->
                                    <div class="col-md-6">
                                        <h5 class="text-dark fw-bold mb-3">Details</h5>
                                        <p><strong>Name:</strong> <span id="userName"
                                                class="text-muted">Loading...</span></p>
                                        <p><strong>Phone:</strong> <span id="userPhone"
                                                class="text-muted">Loading...</span></p>
                                        <p><strong>Address:</strong> <span id="userAddress"
                                                class="text-muted">Loading...</span></p>
                                        <p><strong>Postal Code:</strong> <span id="userPostcode"
                                                class="text-muted">Loading...</span></p>
                                        <p><strong>Email:</strong> <span id="userEmail"
                                                class="text-muted">Loading...</span></p>
                                    </div>
                                    <!-- Interested Books -->
                                    <div class="col-md-6">
                                        <h5 class="text-dark fw-bold mb-3">Interested Books</h5>
                                        <div id="interestedBooks" class="text-muted"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Edit Profile Button -->
                        <div class="mt-4 text-center">
                            <a href="/editProfile" class="btn btn-primary shadow-sm" style="border-radius: 20px;">Edit
                                Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            transition: box-shadow 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

        .btn-primary {
            background-color: #2c3e50;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #f1c40f;
            color: #2c3e50;
        }

        .text-muted {
            color: #6c757d !important;
            font-size: 1.1em;
        }

        h1,
        h5 {
            font-weight: 700;
        }

        #interestedBooks {
            line-height: 1.5;
        }
    </style>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script src="/js/profile.js"></script>
    <%- include('partials/footer') %>