            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
        }

        .hero::after {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 50% 50%, rgba(233, 233, 233, 0.1) 0%, rgba(15, 15, 28, 0.8) 100%);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            backdrop-filter: blur(20px);
            background: var(--glass);
            border-radius: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 4rem;
            transform: translateY(0);
            animation: float 6s ease-in-out infinite;
        }

        .gradient-text {
            background: linear-gradient(45deg, var(--secondary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .feature-card {
            background: var(--glass);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1.5rem;
            padding: 2rem;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .feature-card:hover {
            transform: translateY(-10px) perspective(1000px) rotateX(10deg);
            background: rgba(255, 255, 255, 0.1);
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 50%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .feature-card:hover::before {
            left: 100%;
        }

        .book-card {
            background: var(--glass);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1.5rem;
            padding: 1.5rem;
            transition: all 0.3s ease;
            overflow: hidden;
            position: relative;
            color: #fff !important;
            /* Override text color conflicts */
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        .book-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: ripple 6s infinite;
            z-index: 0;
        }

        .book-card img {
            border-radius: 1rem;
            transition: transform 0.3s ease;
        }

        .book-card:hover img {
            transform: scale(1.05);
        }

        .book-card .badge {
            background-color: var(--primary) !important;
            color: #fff !important;
            /* Ensure badge text is white */
        }

        .book-card .rating {
            color: #ffc107 !important;
            /* Ensure rating text is yellow */
        }

        .how-it-works-step {
            background: var(--glass);
            border-radius: 1.5rem;
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease;
        }

