            transform: scale(1.05);
        }

        .how-it-works-step i {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--accent);
        }

        .community-spotlight-card {
            background: var(--glass);
            border-radius: 1.5rem;
            padding: 2rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
